<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h2 class="text-center mb-0">Login</h2>
      </div>
      <div class="card-body">
        <div class="text-center mb-4">
          <img src="https://developer.kroger.com/assets/logos/integrated-blue-text.svg" alt="Kroger Logo" class="img-fluid" style="max-width: 200px;">
          <p class="mt-3">Login to use the Grocery Assistant</p>
        </div>
        
        <div class="d-grid gap-2">
          <a href="/auth/kroger" class="btn btn-primary btn-lg">
            Login
          </a>
        </div>
        
        <div class="mt-4">
          <div class="alert alert-info alert-permanent">
            <h5>How it works:</h5>
            <ol>
              <li>Login with your Kroger account</li>
              <li>Select your preferred store location</li>
              <li>Enter your grocery list</li>
              <li>Our AI assistant will find the best products and add them to your cart</li>
              <li>Review your cart and checkout on Kroger's website</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>