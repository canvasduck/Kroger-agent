<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Grocery Assistant</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Grocery Assistant</a>
      
      <!-- Menu dropdown for all users -->
      <div class="dropdown d-inline-block me-auto">
        <button class="btn btn-primary dropdown-toggle" type="button" id="menuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-gear"></i> Menu
        </button>
        <ul class="dropdown-menu" aria-labelledby="menuDropdown">
          <% if (typeof session !== 'undefined' && session.krogerToken) { %>
            <li><a class="dropdown-item" href="/groceries/list">Grocery List</a></li>
            <li><a class="dropdown-item" href="/groceries/cart">View Cart</a></li>
            <li><a class="dropdown-item" href="/groceries/locations">Change Store</a></li>
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#configModal">Configuration</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
          <% } else { %>
            <li><a class="dropdown-item" href="/auth/login">Login</a></li>
            <!-- Add Configuration option for testing -->
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#configModal">Configuration</a></li>
          <% } %>
        </ul>
      </div>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (typeof session !== 'undefined' && session.krogerToken) { %>
            <li class="nav-item">
              <a class="nav-link" href="/groceries/list">Grocery List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groceries/cart">View Cart</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groceries/locations">Change Store</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Configuration Modal -->
  <div class="modal fade" id="configModal" tabindex="-1" aria-labelledby="configModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title" id="configModalLabel">Configuration</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              <h6>Store Location</h6>
              <div id="locationConfigContainer">
                <% if (typeof session !== 'undefined' && session.locationId) { %>
                  <p>Current store: <span id="currentStoreDisplay">Loading...</span></p>
                <% } else { %>
                  <p>No store selected</p>
                <% } %>
                <div class="mb-3">
                  <label for="zipCodeConfig" class="form-label">Enter ZIP code to find stores</label>
                  <div class="input-group">
                    <input type="text" class="form-control" id="zipCodeConfig" placeholder="Enter ZIP code" pattern="[0-9]{5}">
                    <button class="btn btn-primary" type="button" id="searchStoresBtn">Search</button>
                  </div>
                </div>
                <div id="storeListContainer" class="d-none">
                  <h6 class="mt-3">Select a store:</h6>
                  <div class="list-group" id="storeListGroup"></div>
                  <div class="d-grid gap-2 mt-3">
                    <button type="button" class="btn btn-success" id="saveLocationBtn">Save Selected Store</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="container">